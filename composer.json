{
    "name": "icanhazstring/systemctl-php",
    "description": "PHP wrapper for systemctl",
    "type": "library",
    "require": {
        "php": ">=7.1.0",
        "symfony/process": ">=4.0",
        "league/plates": "^3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.1",
        "squizlabs/php_codesniffer": "^3.0",
        "codeclimate/php-test-reporter": "dev-master",
        "adlawson/vfs": "^0.12.1",
        "phpstan/phpstan": "^0.9.2",
        "jangregor/phpstan-prophecy": "^0.1.1"
    },
    "autoload": {
        "psr-4": {
            "SystemCtl\\": [
                "src/"
            ]
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SystemCtl\\Tests\\": [
                "tests/"
            ]
        }
    },
    "license": "MIT",
    "authors": [
        {
            "name": "icanhazstring",
            "email": "blubb0r05+github@gmail.com"
        }
    ],
    "scripts": {
        "check": [
          "@php-cs-src",
          "@php-cs-test",
          "@phpstan-src",
          "@phpstan-test"
        ],

        "test": "vendor/bin/phpunit tests/",

        "php-cs-src": "vendor/bin/phpcs --standard=PSR2 src/",
        "php-cs-test": "vendor/bin/phpcs --standard=PSR2 tests/",
        "phpstan-src": "vendor/bin/phpstan analyze --no-progress --level=max src/",
        "phpstan-test": "vendor/bin/phpstan analyze tests/ --no-progress --level=4 -c phpstan.neon"
    }
}
